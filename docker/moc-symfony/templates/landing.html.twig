{% extends 'base.html.twig' %}

{% block title %}Hedgehog School{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('assets/styles/app.css')}}">
    <link rel="stylesheet" href="{{asset('assets/styles/home.css')}}">
{% endblock %}
{% block final_javascripts %}
    <script src="{{ asset('assets/scripts/bgVideoChanger.js') }}" defer></script>
{% endblock %}
{% block bgvideo %}
    <video autoplay muted loop>
        <!--<source src="{{ asset('media/bg.mp4') }}" type="video/mp4">-->
        <source src="{{ asset('media/1399970531860.webm.webm') }}" type="video/webm">
        Votre navigateur ne supporte pas les vid√©os HTML5.
    </video>
{% endblock %}
{% block banner %}{% endblock %}
{% block content %}
    <section id="hero">
        <article>
            <p>Apprendre</p>
            <p>Savoir</p>
            <p>Transmettre</p>
        </article>
        <article class="buttons">
            <a type="button" href="/{{ path('app_register') }}">S'inscrire</a>
            <a type="button" href="/{{ path('app_login') }}">Se connecter</a>
        </article>
        <a href="#slider">Chercher un cours</a>
    </section>
    <main>
        <section class="accordion">
            <h2>Nos derniers cours</h2>
            <form action="{{ path('default_articles') }}">
                <input type="search" name="" id="search" placeholder="Chercher un cours">
                <input type="submit" value="Chercher">
            </form>
            <article class="content hidden">
                <h3>Slider</h3>
                        {{ dump(all_content) }}
                <aside id="slider">
                    <a href="#2">
                        {#
                        <img id='1' src="{{  articles[0]image }}" alt="Image d'illustration">
                        <h4>{{ articles[0]["title"] }}</h4>
                        <p>{{  articles[0]["intro"] }}</p>
                        #}
                    </a>
                    <a href="#1">
                        {#
                        <img id='2' src="{{  articles[1]["image"] }}" alt="Image d'illustration">
                        <h4>{{ articles[1]["title"] }}</h4>
                        <p>{{  articles[1]["intro"] }}</p>
                        #}
                    </a>
                    {#
                    <a href="#4">
                        <img id='3' src="{{  articles[2].image }}" alt="Image d'illustration">
                        <h4>{{ articles[2].title }}</h4>
                        <p>{{  articles[2].image }}</p>
                    </a>
                    <a href="#1">
                        <img id='4' src="{{  articles[3].image }}" alt="Image d'illustration">
                        <h4>{{ articles[3].title }}</h4>
                        <p>{{  articles[3].image }}</p>
                    </a>
                    #}
                </aside>
            </article>
        </section>
    </main>
{% endblock %}