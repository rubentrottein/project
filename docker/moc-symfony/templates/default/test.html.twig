{% extends "layout.html.twig" %}

{% block content %}
<section id="articleHeader"></section>
<section id="postsResume">
    {% if post is iterable %}
        <figure>
            {% for post in post %}
                    <img src={{ post.image }} alt={{post.alt}} />
                <figcaption>
                    <h2>{{ post.title }}</h2>
                    <small>{{ post._id }}</small>
                    <i>{{ post.intro }}</i>
                    <article>{{ post.content }}</article>
                    <mark>{{ post.category }}</mark>
                </figcaption>
            {% endfor %}
        </figure>
    {% else %}
        <figure>
            <img src={{ post.image }} alt={{post.alt}} />
            <figcaption>
                <h2>{{ post.title }}</h2>
                <small>{{ post._id }}</small>
                <i>{{ post.intro }}</i>
                <article>{{ post.content }}</article>
                <mark>{{ post.category }}</mark>
            </figcaption>
        </figure>
    {% endif %}
</section>


{% endblock %}