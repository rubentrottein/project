{% extends "layout.html.twig" %}

{% block content %}
<section id="articleHeader">
    {% if posts is iterable %}
        <figure>
            {% for post in posts %}
                    <img src={{ post.image }} alt={{post.alt}} />
                <figcaption>
                    <h2>{{ post.title }}</h2>
                    <small>{{ post._id }}</small>
                    <i>{{ post.intro }}</i>
                    <article>{{ post.content }}</article>
                    <mark>{{ post.category }}</mark>
                </figcaption>
            {% endfor %}
        </figure>
    {% else %}
        <p>Aucun article trouv√©.</p>
    {% endif %}

    <script></script>
</section>


{% endblock %}